---
const { title } = Astro.props;
import ExclamationTriangle from "@astropub/icons/ExclamationTriangle"
---

<div class="rounded-lg bg-orange-100 px-6 py-4 my-4">
	<div class="flex gap-4 items-center mb-4">
		<div class="rounded-full p-2.5 bg-orange-200 border border-orange-300 w-[40px] h-[40px] [&>svg]:fill-orange-800">
			<ExclamationTriangle></ExclamationTriangle>
		</div>
		<h3 class="font-medium text-lg m-0 p-0">{title}</h3>
	</div>
	<slot></slot>
</div>