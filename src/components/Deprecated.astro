---
const { title } = Astro.props;
import CircleBackslash from "@astropub/icons/CircleBackslash"
---

<div class="rounded-lg bg-gray-100 px-6 py-4 my-4">
	<div class="flex gap-4 items-center mb-4">
		<div class="rounded-full p-2.5 bg-gray-200 border border-gray-300 w-[40px] h-[40px] [&>svg]:fill-gray-800">
			<CircleBackslash></CircleBackslash>
		</div>
		<h3 class="font-medium text-lg m-0 p-0">{title}</h3>
	</div>
	<slot></slot>
</div>